<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanyogghoshas.justjava.R"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="serif-monospace"/>
    <TextView
        android:id="@+id/quantitay_text_view"
        android:layout_below="@id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        android:text="0" />

    <TextView
        android:layout_below="@id/quantitay_text_view"
        android:id="@+id/pricea_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="serif-monospace"/>
    <TextView
        android:id="@+id/priceaa_text_view"
        android:layout_below="@id/pricea_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        android:text="$" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_toRightOf="@id/priceaa_text_view"
        android:layout_below="@id/pricea_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textSize="30sp"
        android:text="0" />

    <Button
        android:layout_marginLeft="8dp"
        android:id="@+id/order_text_view"
        android:layout_below="@id/price_text_view"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="ORDER"
        android:onClick="submitOrder"/>

    <TextView
        android:id="@+id/pricead_text_view"
        android:layout_below="@id/order_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:textSize="60sp"
        android:text="" />

    <Button
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/quantitay_text_view"
        android:layout_below="@id/quantity_text_view"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/text_text_view"
        android:onClick="submitAdd"/>

    <Button
        android:layout_marginLeft="105dp"
        android:layout_toRightOf="@id/quantitay_text_view"
        android:layout_below="@id/quantity_text_view"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="-"
        android:onClick="submitMinus"/>

</RelativeLayout>
